\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{chem122}[2023/12/26 A styling package for the class: ]

\RequirePackage{kvoptions}

\SetupKeyvalOptions{
	family=chem,
	prefix=chem@
}

\DeclareStringOption{title}
\DeclareStringOption[Len Washington III]{author}
\DeclareStringOption[{\today}]{date}
\DeclareStringOption[]{subject}
\DeclareStringOption[]{subjectCode}

\ProcessKeyvalOptions*

\RequirePackage[author=\chem@author,
	title=\chem@title,
	date={\chem@date},
	subject=\chem@subject,
	code=\chem@subjectCode
]{iitacademics}

\RequirePackage{xparse}
\NewDocumentCommand{\element}{m o}{%
	\mbox{#1}%
	\IfValueT{#2}{%
		\ifx1\#2\else_{#2}\fi% Don't write the coefficient if it's 1
	}%
}
\let\chemical\element